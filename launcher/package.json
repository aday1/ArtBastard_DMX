{
  "name": "artbastard-dmx-launcher",
  "version": "1.0.0",
  "description": "Launcher for ArtBastard DMX",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "create-icon": "node create-icon.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1",
    "canvas": "^2.11.2",
    "jimp": "^0.22.10"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "build": {
    "appId": "com.artbastard.dmx.launcher",
    "productName": "ArtBastard DMX Launcher",
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
